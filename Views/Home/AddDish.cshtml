@using ChefNDishes.Models
<div class="text-center">
    <h1 class="display-4"> Add a Dish! </h1>
    <br>
    @* <h3> Check out our roster of Chefs!</h3> *@
    <a href="/"> Add a Chef </a>
    <hr>

